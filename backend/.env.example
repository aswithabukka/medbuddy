# MedBuddy Backend Environment Variables
# Copy this file to .env and update with your actual values

# Application
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://medbuddy:medbuddy_dev_password@localhost:5432/medbuddy?schema=public

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Authentication
JWT_SECRET=your_jwt_secret_here_min_32_chars_change_in_production
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here_min_32_chars_change_in_production
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Email (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here
EMAIL_FROM=noreply@medbuddy.com

# AWS S3 (for medical reports and prescriptions)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_S3_BUCKET=medbuddy-dev

# Twilio Video (for consultations)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_API_KEY=your_twilio_api_key_here
TWILIO_API_SECRET=your_twilio_api_secret_here

# Firebase Cloud Messaging (Push Notifications)
FCM_SERVER_KEY=your_fcm_server_key_here

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# CORS
CORS_ORIGIN=http://localhost:3001,http://localhost:3000

# Frontend URLs (for email links)
FRONTEND_WEB_URL=http://localhost:3001
FRONTEND_MOBILE_DEEP_LINK=medbuddy://

# File Upload
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=application/pdf,image/jpeg,image/png,image/jpg

# Prescription Settings
PRESCRIPTION_NUMBER_PREFIX=RX
